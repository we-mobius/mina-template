{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "App": true,
    "Page": true,
    "Component": true,
    "Behavior": true,
    "getApp": true,
    "getCurrentPages": true,
    "wx": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      1,
      {
        "code": 140,
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
